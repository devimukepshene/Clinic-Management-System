@model Clinic_Management_System.Models.AddPatient
@{
    ViewData["Title"] = "AddPatient";
}
@using (Html.BeginForm("NewPatientDetails1", "Home", FormMethod.Post))
{
<style>
    body {
        background-image: url("/image/Medi.webp");
        background-size: cover;
    }
</style>
<body>
    <img src="~/image/StoneClinicLogo.png" alt="Logoimg" align="right" height="100" width="100" />

    <table>
        <tr>
            <td>PatientID:</td>
            <td>@Html.TextBoxFor(m => m.PatientID)<br /></td>

        </tr>
        <tr>
            <td>FirstName:</td>
            <td>@Html.TextBoxFor(m => m.FirstName)<br /></td>
        </tr>
        <tr>
            <td>LastName</td>
            <td>@Html.TextBoxFor(m => m.LastName)</td>
        </tr>
        <tr>
            <td>Sex:</td>
            <td>
                <br /><br />
                @Html.RadioButtonFor(m => m.Gender, "male")male<br />
                @Html.RadioButtonFor(m => m.Gender, "female")female<br />
                @Html.RadioButtonFor(m => m.Gender, "others")others
                <br /><br />
            </td>
        </tr>
        <tr>
            <td>Age:</td>
            <td>
                <br />
                @Html.TextBoxFor(m => m.Age)<br />
            </td>
        </tr>
        <tr>
            <td>DOB</td>
            <td>
                <br />
                @Html.TextBoxFor(m => m.DOB)<br />
            </td>
        </tr>
       <tr>
        <td><input type="submit" value="Add" /></td>
        <td>
            <input type="submit" value="Home" asp-action="Home" asp-controller="Home" />
        </td>
        </tr>
    </table>
    @*<input type="submit" value="save" />*@
</body>
}

