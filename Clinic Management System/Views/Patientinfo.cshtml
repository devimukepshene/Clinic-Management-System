@model IEnumerable<Clinic_Management_System.Models.AddPatient>

    @{
        ViewData["Title"] = "Patientinfo";
    }
    @using (Html.BeginForm("Patientinfo", "Home", FormMethod.Post))
    {
        <style>
            body {
                background-image: url("/image/Medi.webp");
                background-size: cover;
            }
        </style>
        <body>
            <img src="~/image/StoneClinicLogo.png" alt="Logoimg" align="right" height="100" width="100" />
            <table class="table" align="center">
                <tr>
                    <th>
                        @Html.DisplayName("PatientID");
                    </th>
                    <th>
                        @Html.DisplayName("FirstName");
                    </th>
                    <th>
                        @Html.DisplayName("LastName");
                    </th>
                    <th>
                        @Html.DisplayName("Gender");
                    </th>
                    <th>
                        @Html.DisplayName("Age");
                    </th>
                    <th>
                        @Html.DisplayName("DOB");
                    </th>
                </tr>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PatientID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Age)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DOB)
                            </td>

                        </tr>
                    }
                </tbody>
                <tr>
                    <td>
                        <input type="submit" value="Home" asp-action="Home" asp-controller="Home" />
                    </td>
                </tr>
            </table>

        </body>
    }

